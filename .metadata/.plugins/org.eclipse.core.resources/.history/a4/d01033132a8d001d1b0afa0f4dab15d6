package org.akincengiz.plane;

public class PointTest {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Point point = new Point();
		point.x = 3;
		point.y = 4;
		
		Point point2 = new Point();
		point2.x = 6;
		point2.y = 8;
		
		System.out.print("X ekseni : " + point.x + " Y ekseni : " + point.y + " olan noktanin origine olan uzakligi : " + point.getDistanceFromOrigin());
		System.out.print("\n************************************************************\n");
		System.out.print(point2.getDistanceFromOrigin());
		System.out.print("\n************************************************************\n");
		System.out.print(Point.calculateDistanceFromPoint(point, point2));
		
	}

}

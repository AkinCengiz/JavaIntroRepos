
public class FootballPlayerTest {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		FootballPlayer player = new FootballPlayer();
		player.no = 10;
		player.name = "Sergen Yalçın";
		player.inPlay = true;
		player.minutes = 0;
		player.numberOfGoals = 0;
		
		player.play(90);
		player.score();
		
		System.out.println(player.no + " numaralı formasıyla "+player.name+" ligde Besiktas formasıyla "+player.numberOfGoals+". golünü attı.");
	}

}

package org.akincengiz.university;

public class Department {
	String name;
	Professor head;
	Course[] courses;
	Student[] students;
	private static int studentCount;
	private static int courseCount;
	
	{
		
		Student[] students = new Student[100];
		Course[] courses = new Course[100];
		
	}
	static {
		studentCount = 0;
		courseCount = 0;
	}
	
	public Department()
	{
		this("",null,null,null);
	}
	public Department(String name)
	{
		this(name, null, null, null);
	}
	public Department(String name, Professor head, Course course, Student student)
	{
		studentCount = 0;
		courseCount = 0;
		this.name = name;
		this.head = head;
		this.courses[courseCount] = course;
		//courseCount++;
		this.students[studentCount] = student;
		//studentCount++;
	}
	
	public String getName() {
		return name;
	}
	public void setName(String name) {
		this.name = name;
	}
	public Professor getHead() {
		return head;
	}
	public void setHead(Professor head) {
		this.head = head;
	}
	public Course[] getCourses() {
			return courses;
	}
	public void setCourses(Course course) {
		int itemCount=0;
		for(int i = 0; i < courses.length; i++)
		{
			if(courses[i] != null)
			{
				itemCount++;
			}
		}
		this.courses[itemCount] = course;
	}
	public Student[] getStudents() {
		return students;
	}
	public void setStudents(Student student) {
		int itemCount=0;
		for(int i = 0; i < students.length; i++)
		{
			if(students[i] != null)
			{
				itemCount++;
			}
		}
		this.students[itemCount] = student;
	}
}
